import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
Scanner sc = new Scanner(System.in);
     //taking input employee id, name and designation
    int empId = sc.nextInt();
    sc.nextLine(); //to consume the newline character left by sc.nextInt()
    String name = sc.nextLine();
    String designation = sc.nextLine();

    //checking eligibility for appraisal
    if(empId > 201){
        int salary = 20000 + 1000; //increasing salary by 1000 INR
        System.out.println(name + " with employee ID " + empId + " is eligible for appraisal. New salary is " + salary + " INR");
    }
    else{
        System.out.println("No Appraisal");
    }
     }
       }

       
 
